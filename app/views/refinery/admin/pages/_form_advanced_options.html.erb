<div class="panel-group col-sm-6" id="ao_accordion">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h4 class="panel-title">
        <a class="accordion-toggle" data-toggle="collapse" data-parent="#ao_accordion" href="#ao_collapse">
		  Advanced Options
        </a>
      </h4>
    </div>
    <div id="ao_collapse" class="panel-collapse collapse col-xs-12">
      <div class="form-group">
          <%= f .label :parent_id do %>
		    <%= t( '.parent_page') %> &nbsp;
			<%= link_to glyph('question-sign'), '#', :class => 'help', :title => t('.parent_page_help'), :data => {:toggle => 'tooltip'} %>
		  <% end %>
          <%= f .select :parent_id, nested_set_options(::Refinery::Page, @page) {|i| "#{'-' * i.level} #{i.title}" }, { :include_blank=>true}, { :class => "form-control input-sm" } %>
        </div>

	  <% if Refinery::Pages.use_layout_templates %>
	  <div class="form-group">
		  <%= f .label :layout_template, :class=>'control-label' do %>
		  <%= t( '.layout_template') %> &nbsp;
		 			<%= link_to glyph('question-sign'), '#', :class => 'help', :title => t('.layout_template_help'), :data => {:toggle => 'tooltip'} %>
		  <% end %>
		  <%= f .select :layout_template, @valid_layout_templates, template_options(:layout_template, @page), { :class=>"form-control input-sm" } %>
		</div>
	  <% end %>

	  <div class="form-group">
		  <%= f .label :view_template, t( '.view_template'), :class=>'control-label' %>
		  <%= f .select :view_template, @valid_view_templates.map { |t| [t.titleize, t] }, template_options(:view_template, @page), { :class=>"form-control input-sm" } %>
		  <span class="help-block"><%= t('.view_template_help') %></span>
		</div>

	  <div class="form-group">
		  <%= f .label :menu_title, t( '.menu_title'), :class=>'control-label' %>
		  <%= f .text_field :menu_title, :class=>'form-control' %>
		  <span class="help-block"><%= t('.menu_title_help') %></span>
		</div>

      <% if Refinery::Pages.use_custom_slugs %>
	  <div class="form-group">
	      <%= f .label :custom_slug, t( '.custom_slug'), :class=>'control-label' %>
	      <div class="form-control">
	        <%= f .text_field :custom_slug, :class=>'span4' %>
	        <span class="help-block"><%= t('.custom_slug_help') %></span>
	      </div>
	    </div>
      <% end %>

      <div class="form-group">
          <%= f .label :skip_to_first_child?, t( '.skip_to_first_child') %>
          <%= f .label :skip_to_first_child, :class=>"checkbox" do %>
            <%= f .check_box :skip_to_first_child %>
            <%= t ( '.skip_to_first_child_label') %>
          <% end %>
          <span class="help-block"><%= t('.skip_to_first_child_help') %></span>
        </div>

      <div class="form-group">
          <%= f .label :link_url, t( '.link_url') %>
          <%= f .text_field :link_url, :class=>'form-control' %>
          <span class="help-block"><%= t('.link_url_help') %></span>
        </div>

      <div class="form-group">
          <%= f .label :show_in_menu, t( '.show_in_menu_title'), :id=>'page_show_in_menu_heading' %>
          <%= f .label :show_in_menu, :class=>"checkbox" do %>
            <%= f .check_box :show_in_menu %>
            <%= t ( '.show_in_menu_description') %>
          <% end %>
          <span class="help-block"><%= t('.show_in_menu_help') %></span> 
        </div>
	</div>
  </div>
</div>

<% content_for :javascripts do %>
  <script>
    $(document).ready(function () {
      link_tester.validate_url_textbox("#page_link_url");
	  $('[data-toggle="tooltip"]').tooltip({
	      'placement': 'right'
	  });
    });
  </script>
<% end %>
