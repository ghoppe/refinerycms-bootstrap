<%= render '/refinery/admin/search', url: refinery.admin_images_path %>

<div class="btn-group-vertical btn-group-lg btn-block">
    <%= link_to raw('<span class="glyphicon glyphicon-upload"></span> ') << t('.create_new_image'), refinery.new_admin_image_path(dialog: true), class: "btn btn-lg btn-info" %>
    <% other_image_views.each do |image_view| %>
      <%= link_to raw('<span class="glyphicon glyphicon-refresh"></span> ') << t('switch_to', scope: 'refinery.admin.images.index.view', view_name: t("#{image_view}", scope: 'refinery.admin.images.index.view')), refinery.admin_images_path(view: image_view, page: params[:page]), class: "btn btn-lg btn-info" %>
    <% end %>
</div>
