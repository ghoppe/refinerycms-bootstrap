<form method='GET' action='<%= url %>' class='form-search pull-right'>
	<div class="input-group">
  		<input type='text' name='search' class="form-control" value='<%= params[:search] %>' />
  		<% if params[:wymeditor].presence %><input name='wymeditor' value='true' type='hidden'><% end %>
  		<% if from_dialog? %><input id='dialog' name='dialog' type='hidden' value='true' /><% end %>
  		<% if @callback.presence %><input name='callback' value='<%= @callback %>' type='hidden'><% end %>
  		<span class="input-group-btn"><%= submit_tag "#{t('button_text', :scope => 'refinery.admin.search')}", :name => nil, :class => "btn btn-default" %></span>
  	</div>
</form>
